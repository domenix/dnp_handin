@page
@model TicketsModel
@{
    ViewData["Title"] = "Tickets";
}

<h4>Your reserved tickets</h4>
<div class="row">
    <div class="col-md-9">
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Title</th>
                <th scope="col">Seat</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.getTickets())
            {
                <tr>
                <td>@item.Screening.Date.ToString("dd-MM-yyyy HH':'mm")</td>
                <td>@item.Screening.Movie.Title</td>
                <td>@item.Screening.Tickets[0].Seat</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
